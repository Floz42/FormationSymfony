{% extends 'base.html.twig' %}

{% block title %} Votre profil utilisateur {% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification du profil :</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Informations générales</h2>
                    <hr>
                    {{ form_row(form.firstname)}}
                    {{ form_row(form.lastname)}}
                    {{ form_row(form.email)}}
                    {{ form_row(form.picture)}}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Détails</h2>
                    <hr>
                    {{ form_row(form.introduction)}}
                    {{ form_row(form.description)}}
                    <hr>
                    <p>
                        Si vous avez terminé vos modifications, vous pouvez les sauvegarder.
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i>
                            Modifier le profil
                        </button>
                    </p>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}