{% extends 'admin/base.html.twig' %}

{% block title %} Modification d'un commentaire {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire n° {{ comment.id }}</h1>
        <div class="alert alert-info my-3">
            <p>
                <strong>Annonce liée : </strong>{{ comment.ad.title }} <br>
                <strong>Auteur : </strong> {{ comment.author.fullName }} <br>
                <strong>Date de création :</strong> {{ comment.createdAt | date('d/m/Y à H:i')}} <br>
                <strong>Note donnée :</strong> {{ comment.rating }}
            </p>
        </div>
        <div class="col-8">
            {{ form_start(form) }}
                {{ form_row(form.content, {'label': 'Modifier le commentaire :'}) }}
                <button type="submit" class="btn btn-primary mt-3">
                    <i class="fas fa-check"></i>
                    Enregistrer les modifications
                </button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}